div(ng-controller="NavbarMenuCtrl")
    nav.navbar.navbar-default(role='navigation')
        .container-fluid

            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/home').jug-logo

            #navbar-collapse.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li: a(href='/home') Home
                    li: a(href='/archive') Archive
                    li: a(href='/newTopic', ng-show="getUserLogged()") Create new topic

                ul.nav.navbar-nav.navbar-right(ng-hide="getUserLogged()")
                    li: a(href="#", data-toggle="modal", data-target="#loginModal") Login
                    li: a(href='/register') Register
                ul.nav.navbar-nav.navbar-right(ng-show="getUserLogged()")
                    li: a(href="/userDetails") {{getUserLogged().username}}
                    li: a(href="#", data-toggle="modal", data-target="#logoutModal") Logout
    include loginDialog
    include logoutDialog

